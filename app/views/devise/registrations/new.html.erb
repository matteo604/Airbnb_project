<h2 class="text-center mb-4">Sign up</h2>

<div class="container d-flex justify-content-center">
  <div class="col-md-8 col-lg-6">
    <div class="card auth-form">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :first_name,
                      required: true,
                      input_html: { class: 'form-control', placeholder: "Enter your first name" },
                      wrapper_html: { class: 'mb-3' } %>

          <%= f.input :last_name,
                      required: true,
                      input_html: { class: 'form-control', placeholder: "Enter your last name" },
                      wrapper_html: { class: 'mb-3' } %>

          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: 'form-control', placeholder: "Enter your email" },
                      wrapper_html: { class: 'mb-3' } %>

          <%= f.input :password,
                      required: true,
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password", class: 'form-control', placeholder: "Enter your password" },
                      wrapper_html: { class: 'mb-3' } %>

          <%= f.input :password_confirmation,
                      required: true,
                      input_html: { autocomplete: "new-password", class: 'form-control', placeholder: "Confirm your password" },
                      wrapper_html: { class: 'mb-3' } %>
        </div>

        <div class="form-actions text-center">
          <%= f.button :submit, "Sign up", class: "btn w-100 custom-btn" %>
        </div>
      <% end %>

      <div class="text-center mt-3">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
