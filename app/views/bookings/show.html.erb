<h2 class="text-center mt-3"> Here is your booking</h2>
  <div class="container mt-4">
    <div class="one_column">
      <%= render partial: "booking_details_card", locals: { booking: @booking }  %>
    </div>
  </div>


  <div class="col-md-8 offset-md-2">

    <h3 class="text-center mb-4 mt-4">Write a review</h3>

    <% if @booking.review.nil? %>

      <%= form_with(model: @review, url: booking_reviews_path(@booking), scope: :review, local: true) do |form| %>

        <div class="form-group mb-2">
          <%= form.label :content, 'Review Content', class: 'sr-only' %> <!-- Hidden label -->
          <%= form.text_area :content, class: 'form-control', placeholder: 'Review Content' %> <!-- Textarea with Bootstrap styling -->
        </div>

        <div class="form-group mx-sm-3 mb-2">
          <%= form.label :rating, 'Rating', class: 'sr-only' %> <!-- Hidden label -->
          <%= form.number_field :rating, class: 'form-control', placeholder: 'Rating' %> <!-- Input field with Bootstrap styling -->
        </div>

        <div class="d-flex justify-content-center">
          <%= form.submit 'Submit Review', class: 'btn btn-primary mb-2' %> <!-- Centered submit button -->
        </div>
      <% end %>

    <% elsif @booking.end_date < Date.today %>

      <h2 class="text-center">You can't review this property yet</h2> <!-- Centered text when review is not allowed -->

    <% else %>

      <%= render partial: "review_card", locals: { review: @review }  %>

    <% end %>


  <div>
</div>
